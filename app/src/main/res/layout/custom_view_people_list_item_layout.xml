<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/people_list_item"
                android:background="#ffffffff">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/people_list_dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/default_album_art"
        android:layout_marginRight="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/people_list_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/people_list_dp"
        android:ellipsize="end"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="2dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/people_list_last_played"
        android:layout_below="@+id/people_list_name"
        android:layout_toRightOf="@+id/people_list_dp"
        android:textSize="12sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#ff707070"/>

</RelativeLayout>