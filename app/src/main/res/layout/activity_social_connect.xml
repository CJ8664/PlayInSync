<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/blue_light">

    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:id="@+id/logo"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect with your friends"
        android:id="@+id/connect_primary_message"
        android:textStyle="bold|normal"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Express and Explore music.We promise we won't post anything without your permission"
        android:id="@+id/connect_secondary_message"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:textIsSelectable="false"
        android:layout_below="@+id/connect_primary_message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:text="Connect with Twitter"
        android:id="@+id/twitter_connect_button"
        android:background="@drawable/social_button_background"
        android:layout_above="@+id/skip_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/blue_light"
        android:textSize="18sp"
        android:textStyle="bold|normal"
        android:paddingLeft="8dp"
        android:drawableLeft="@drawable/icon_twitter"
        android:visibility="visible" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:text="Connect with Facebook"
        android:id="@+id/facebook_connect_button"
        android:background="@drawable/social_button_background"
        android:layout_above="@+id/twitter_connect_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/blue_light"
        android:textSize="18sp"
        android:textStyle="bold|normal"
        android:paddingLeft="8dp"
        android:drawableLeft="@drawable/icon_facebook"
        android:visibility="visible" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:text="Continue"
        android:id="@+id/skip_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/social_button_background"
        android:textColor="@color/blue_light"
        android:textSize="18sp"
        android:textStyle="bold|normal"
        android:paddingLeft="8dp" />

</RelativeLayout>